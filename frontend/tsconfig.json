{
    "compilerOptions": {
      "module": "ESNext",                              /* Use ES modules for output */
      "moduleResolution": "node",                       /* Resolve modules like Node.js */
      "target": "ESNext",                               /* Output modern JavaScript */
      "esModuleInterop": true,                          /* Enable interop with CommonJS */
      "skipLibCheck": true,                             /* Skip type checking for .d.ts files */
      "strict": true,                                   /* Enable strict type-checking */
      "forceConsistentCasingInFileNames": true,          /* Ensure correct casing in imports */
      "allowJs": true,                                  /* Allow JavaScript files if needed */
      "resolveJsonModule": true                         /* Allow importing JSON files */
    },
    "include": [
      "src/**/*.ts",
      "scripts/**/*.ts"
    ]
  }
  